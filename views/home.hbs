<div class="row">
  <div class="col-6">
    <h1>Residents</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Add Resident</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Booking History</th>
      <th scope="col">Payment Information</th>
      <th scope="col">Contact</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.ResidentID}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.BookingHistory}}</td>
      <td>{{this.PaymentInformation}}</td>
      <td>{{this.Contact}}</td>
      <td class="text-end">
        {{!-- <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
          View</a> --}}
        <a href="/edituser/{{this.ResidentID}}" type="button" class="btn btn-light btn-small"><i
            class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.ResidentID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>
          Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>