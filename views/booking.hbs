<div class="row">
    <div class="col-6">
        <h1>Booking</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addBooking" type="button" class="btn btn-primary align-self-center">+ Add Booking</a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Booking ID</th>
            <th scope="col">Payment ID</th>
            <th scope="col">Payment Status</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}
        <tr>
            <th scope="row">{{this.BookingID}}</th>
            <td>{{this.PaymentID}}</td>
            <td>{{this.PaymentStatus}}</td>
            <td>{{this.StartDate}}</td>
            <td>{{this.EndDate}}</td>
            <td class="text-end">
                <a href="/viewuser/{{this.BookingID}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-eye"></i>
                    View</a>
                <a href="/edituser/{{this.BookingID}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-pencil"></i>
                    Edit</a>
                <a href="/{{this.BookingID}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-person-x"></i>
                    Delete</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>